---
import githubImage from "../assets/images/icons/github-icon.svg"
import linkedinImage from "../assets/images/icons/linkedin-icon.svg"
import cvPdf from "../assets/AlejandroEspinoCV.pdf"
---
<nav id="navbar" class="flex justify-between items-center py-4 text-white md:fixed top-0 left-0 right-0 z-50 h-16 max-w-screen-lg mx-auto ">
    <div>
        <span class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-br from-sky-500 to-[#f5f5f5] md:text-2xl">Alejandro Espino</span>        
    </div>
    <div>
        <ul class="hidden md:flex gap-4">
            <li><a href="#inicio" class="relative text-white font-bold after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:h-[2px] after:w-0 after:bg-sky-500 after:rounded-xl
           after:transition-all after:duration-500 hover:after:w-full">Home</a></li>
            <li><a href="#habilidades" class="relative text-white font-bold after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:h-[2px] after:w-0 after:bg-sky-500 after:rounded-xl
           after:transition-all after:duration-500 hover:after:w-full">Habilidades</a></li>
            <li><a href="#proyectos" class="relative text-white font-bold after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:h-[2px] after:w-0 after:bg-sky-500 after:rounded-xl
           after:transition-all after:duration-500 hover:after:w-full">Proyectos</a></li>
            <li><a href="#contacto" class="relative text-white font-bold after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:h-[2px] after:w-0 after:bg-sky-500 after:rounded-xl
           after:transition-all after:duration-500 hover:after:w-full">Contacto</a></li>
        </ul>
    </div>
    <!-- Mobile -->
     <div class="relative md:hidden">
        <input type="checkbox" id="menu-toggle" class="peer hidden">
        <label for="menu-toggle" class="cursor-pointer block peer-checked:hidden">
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 6H20M4 12H20M4 18H20" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
        </label>
        <label for="menu-toggle" class="cursor-pointer hidden peer-checked:block">
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 18L18 6M6 6l12 12" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
        </label> 
        <ul
    class="fixed right-0 top-16 w-full
           flex flex-col items-center gap-6
           bg-[#0f172a] z-50
           overflow-hidden      
           max-h-0                   
           transition-[max-height] duration-300 ease-in-out
           peer-checked:max-h-60"    
  >
    <li><a href="#inicio" class="block p-2 font-bold hover:text-sky-500">Home</a></li>
    <li><a href="#habilidades" class="block p-2 font-bold hover:text-sky-500">Habilidades</a></li>
    <li><a href="#proyectos" class="block p-2 font-bold hover:text-sky-500">Proyectos</a></li>
    <li><a href="#contacto" class="block p-2 font-bold hover:text-sky-500">Contacto</a></li>
  </ul>
     </div>
     <!--Escritorio -->
    <div class="hidden md:flex gap-4">
        <a href={cvPdf} download class="font-bold p-2 rounded-xl border cursor-pointer border-white hover:bg-white hover:text-black transition-colors duration-300">
            Descargar CV
        </a>
        <a href="https://github.com/CafecitoSKR" target="_blank" rel="noopener noreferrer" class="flex items-center">
            <img src={githubImage.src} alt="" class="w-8 aspect-square">
        </a>
    
        <a href="https://www.linkedin.com/in/alejandro-espino-flores-b7b139253" target="_blank" rel="noopener noreferrer" class="flex items-center">
            <img src={linkedinImage.src} alt="" class="w-8 aspect-square">
        </a>

    </div>
</nav>

<script type="module">
    const navbar = document.getElementById("navbar");
    const heroSection = document.querySelector("section");
    
    window.addEventListener("scroll", function() {
        if (window.scrollY > heroSection.offsetHeight) {
            navbar.classList.add("backdrop-blur-sm");
        } else {
            navbar.classList.remove("backdrop-blur-sm");
        }
    });

    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const targetId = this.getAttribute('href');
      if (targetId === '#') return;
      
      const targetElement = document.querySelector(targetId);
      if (targetElement) {
        const menuToggle = document.getElementById('menu-toggle');
        if (menuToggle && menuToggle.checked) {
          menuToggle.click();
        }
        
        window.scrollTo({
          top: targetElement.offsetTop - 20,
          behavior: 'smooth'
        });
      }
    });
  });
</script>
